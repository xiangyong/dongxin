	<bean id="dynamicDataSource" class="com.jd.platform.util.router.DynamicDataSource">
	    <property name="targetDataSources">  
              <map key-type="java.lang.String">  
                 <!-- 延保订单数据源 主从 -->
                 <entry key="master_platform" value-ref="platformDSForWrite"/>  
                 <entry key="slave_platform" value-ref="platformDSBakForRead"/>
                 
                 <!-- 延保补购数据源 主从 -->
                 <entry key="master_platform_order" value-ref="dataSource1"/>  
                 <entry key="slave_platform_order_hc1" value-ref="platformOrderDSBakForRead_hc1"/>
                 <entry key="slave_platform_order_hc2" value-ref="platformOrderDSBakForRead_hc2"/>
                 <entry key="slave_platform_order_yz" value-ref="platformOrderDSBakForRead_yz"/>
              </map>  
        </property>  
	</bean>
	
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
	    <property name="dataSource" ref="dynamicDataSource" />
		<property name="configLocation" value="classpath:sqlmap-config.xml" />
	</bean>
	
</beans>